# Production Environment Variables
NODE_ENV=production

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sooq_mazad_prod"

# NextAuth
NEXTAUTH_URL=https://sooq-mazad.ly
NEXTAUTH_SECRET=your-production-secret-here

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here

# API URLs
NEXT_PUBLIC_API_URL=https://api.sooq-mazad.ly
NEXT_PUBLIC_APP_URL=https://sooq-mazad.ly

# Storage
UPLOAD_DIR=/var/uploads
MAX_FILE_SIZE=10485760

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=error

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600