{
  "root": true,
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es2022": true
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    ".turbo",
    "dist",
    "build",
    "*.config.js",
    "*.config.ts"
  ],
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off"
  },
  "overrides": [
    {
      "files": ["apps/web/**/*.{ts,tsx}", "apps/admin/**/*.{ts,tsx}"],
      "extends": ["next/core-web-vitals"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "react-hooks/exhaustive-deps": "warn"
      }
    }
  ]
}
