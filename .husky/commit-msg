#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# التحقق من رسالة الالتزام
commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# التحقق من الحد الأدنى لطول الرسالة
if [ ${#commit_msg} -lt 10 ]; then
  echo "❌ خطأ: رسالة الالتزام قصيرة جداً (الحد الأدنى 10 أحرف)"
  exit 1
fi

echo "✅ رسالة الالتزام صالحة"
